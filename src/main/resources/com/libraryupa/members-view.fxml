<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.libraryupa.controller.MemberController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="header-label" text="Member Management" />

    <HBox spacing="10.0">
        <TextField fx:id="nameField" promptText="Member Name" />
        <TextField fx:id="emailField" promptText="Email" />
        <Button onAction="#handleAddMember" styleClass="button" text="Register Member" />
        <Button onAction="#handleDeleteMember" styleClass="button" text="Delete Member"/>
    </HBox>

    <TableView fx:id="membersTable" prefHeight="400.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" />
            <TableColumn fx:id="colName" prefWidth="200.0" text="Name" />
            <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="colType" text="Type" />
        </columns>
    </TableView>
</VBox>