<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #405788;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.login.libraryupa.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Biblioteca UPA" textFill="WHITE">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" maxWidth="300.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">
        <padding>
            <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
        </padding>

        <Label text="Iniciar Sesión">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <TextField fx:id="usernameField" promptText="Usuario" style="-fx-background-radius: 5;" />

        <PasswordField fx:id="passwordField" promptText="Contraseña" style="-fx-background-radius: 5;" />

        <Button onAction="#onLoginClick" prefWidth="200.0" style="-fx-background-color: #5e548e; -fx-text-fill: white; -fx-cursor: hand;" text="Ingresar" />

        <Label fx:id="errorLabel" textFill="#e63946" />
    </VBox>
</VBox>
